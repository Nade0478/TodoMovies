{% extends 'base.html.twig' %}

{% block title %}Films index{% endblock %}

{% block body %}
    <h1>Films index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Autor</th>
                <th>Genre</th>
                <th>Summarize</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.id }}</td>
                <td>{{ film.title }}</td>
                <td>{{ film.autor }}</td>
                <td>{{ film.genre }}</td>
                <td>{{ film.summarize }}</td>
                <td>
                    <a href="{{ path('app_films_show', {'id': film.id}) }}">show</a>
                    <a href="{{ path('app_films_edit', {'id': film.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_films_new') }}">Create new</a>
{% endblock %}
