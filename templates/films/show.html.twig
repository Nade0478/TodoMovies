{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    <h1>Films</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.title }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ film.autor }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ film.genre.name }}</td>
            </tr>
            <tr>
                <th>Résumer</th>
                <td>{{ film.summarize }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_films_index') }}">Retour à la liste</a>

    <a href="{{ path('app_films_edit', {'id': film.id}) }}">Valider</a>

    {{ include('films/_delete_form.html.twig') }}
{% endblock %}
